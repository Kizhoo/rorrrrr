{
  "functions": {
    "api/*.js": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/admin/messages",
      "destination": "/api/admin/messages.js"
    },
    {
      "source": "/api/admin/messages/:id",
      "destination": "/api/admin/messages.js"
    },
    {
      "source": "/api/admin/settings",
      "destination": "/api/admin/settings.js"
    },
    {
      "source": "/api/admin/analytics",
      "destination": "/api/admin/analytics.js"
    },
    {
      "source": "/api/admin/export",
      "destination": "/api/admin/export.js"
    },
    {
      "source": "/api/admin/cleanup",
      "destination": "/api/admin/cleanup.js"
    },
    {
      "source": "/api/upload",
      "destination": "/api/upload.js"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
